extends base.pug

block scripts
    script(src='/index.js')

block style 
    style 
        include ../static/style.css
        include ../static/contact-style.css

block content 
    div.container
        h1 Contact Us 
        form(action="/contact", method="post", class="myForm")
            input(type="text", name="name", class="myInput", placeholder="Enter Your Name...")
            input(type="tel", name="phone", class="myInput", placeholder="Enter Your phone number...")
            input(type="email", name="email", class="myInput", placeholder="Enter Your Email...")
            input(type="text", name="address", class="myInput", placeholder="Enter Your Address...")
            input(type='text' name="concern", class="myInput", placeholder="Enter your concern....") 
            div#res=response
            input(type="submit", value="Submit", class='btn')